{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "benchmark: run",
            "command": "dotnet",
            "args": [
                "run",
                "--configuration",
                "Release"
            ],
            "type": "process",
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/src/SmallsOnline.WindowsBuildNumbers.Lib.Benchmark"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}